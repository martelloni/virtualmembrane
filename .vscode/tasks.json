{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cpp build active file",
            "command": "ssh",
            "args": [
                "-o",
                "StrictHostKeyChecking=no",
                "root@localhost",
                "-p",
                "2222",
                "/src/build.sh"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Docker: rebuild subsystem",
            "command": "${workspaceFolder}/docker_host_run.sh",
            "args": [
            ],
            "group": "build",
        }
    ]
}
